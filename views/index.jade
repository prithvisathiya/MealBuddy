extends layout

block content
  script(src="/javascripts/index.js")
  nav.navbar.navbar-default.navbar-fixed-top
    .container-fluid
      h1#MealBuddy MealBuddy
      button#mealCart.btn.btn-default
        .glyphicon.glyphicon-shopping-cart(type='button', style='display:inline-block;')
        p#cartQuantity(style='display:inline-block;') 0  
  h2.display-4.m-b-2 Criterias
  .main.container-fluid 
    
    //- register form
    form#criteria-form
      table#criteriaTable.form-group
        tr.table-row
          td
            span.glyphicon.glyphicon-remove
          td
            select.form-control.selectpicker.criteria-name(type='text', title='potassium, cholestrol, etc...', data-live-search='true', data-width="100%")
              option(value='fat') fat
              option(value='potassium') potassium
              option(value='sugar') sugar
              option(value='calories') calories
          td
            select.form-control.selectpicker.range-type
              option(value='lt') Less than
              option(value='between') Between
              option(value='gt') Greater than
          td
            input.form-control.range1(type='number', size='5', value=30)
          td
            input.form-control.range2(type='number', size=5, value=50, hidden=true)
          td
            select.form-control.selectpicker.priority(data-width="100%")
              option(value='high') High
              option(value='medium', selected='selected') Medium
              option(value='low') Low

        tr.table-row
          td
            span.glyphicon.glyphicon-remove
          td
            select.form-control.selectpicker.criteria-name(type='text', title='potassium, cholestrol, etc...', data-live-search='true', data-width="100%")
              option(value='fat') fat
              option(value='potassium') potassium
              option(value='sugar') sugar
              option(value='calories') calories
          td
            select.form-control.selectpicker.range-type
              option(value='lt') Less than
              option(value='between') Between
              option(value='gt') Greater than
          td
            input.form-control.range1(type='number', size='5', value=30)
          td
            input.form-control.range2(type='number', size='5', value=30, hidden=true) 
          td
            select.form-control.selectpicker.priority(data-width="100%")
              option(value='high', selected='selected') High
              option(value='medium') Medium
              option(value='low') Low
          
      
      button#add.btn.btn-success(type="button") Add
      
      button#submit.btn.btn-primary(type="button") Submit
      
      //- button#get.btn.btn-success(type="button") Get


  h2 Suggestions

