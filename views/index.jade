        ul#dessert.items-list





  //- Item Modal and Cart Modal
  #itemModal.modal.fade(tabindex='-1', role='dialog')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          h4#item-modal-title.modal-title Food
        .modal-body
          .row
            img#itemInfoImage.img-thumbnail(src="images/default_item_image.jpg")
            #itemInfoCriteriaDesc
            #itemInfoDesc
        .modal-footer
          button.btn.btn-danger.modalButtons(type='button', data-dismiss='modal') Close
          button#addMealCart.btn.btn-primary.modalButtons(type='button') Add To MealCart
          p.modalButtons How Many?
          input#countToAdd.form-control.modalButtons(type='number', size='1', min='1', value=1)
  
  #cartModal.modal.fade(tabindex='-1', role='dialog')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          h4#cart-modal-title.modal-title Your Cart
        #cartModalBody.modal-body
          p#noItems No item in MealCart yet. You can add from suggestions to you Meal Cart
          table#cartItems  
          #cartCriteriaDesc
          table#cartNutritionCount
            tr
              td Calories
              td#cartCALORIES N/A
            tr
              td Fat
              td#cartFAT N/A
            tr
              td Sugar
              td#cartSUGAR N/A
            tr
              td Potassium
              td#cartPOTASSIUM N/A
            tr
              td Calcium
              td#cartCALCIUM N/A
            tr
              td Phosphorous
              td#cartPHOSPHOROUS N/A

        .modal-footer
          button.btn.btn-danger.modalButtons(type='button', data-dismiss='modal') Close

