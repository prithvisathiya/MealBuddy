  .panel-group
    .panel.panel-default
      .panel-heading
        .panel-title
          a(data-toggle='collapse', href='#collapse1') Appetizers
        hr(width="50%")
      #collapse1.panel-collapse.collapse
        ul#appetizer.items-list
  .panel-group
    .panel.panel-default
      .panel-heading
        .panel-title
          a(data-toggle='collapse', href='#collapse2') Meals
        hr(width="50%")
      #collapse2.panel-collapse.collapse
        ul#meal.items-list
  .panel-group
    .panel.panel-default
      .panel-heading
        .panel-title
          a(data-toggle='collapse', href='#collapse3') Vegetables
        hr(width="50%")
      #collapse3.panel-collapse.collapse
        ul#vegetable.items-list
  .panel-group
    .panel.panel-default
      .panel-heading
        .panel-title
          a(data-toggle='collapse', href='#collapse4') Fruits
        hr(width="50%")
      #collapse4.panel-collapse.collapse
        ul#fruit.items-list
  .panel-group
    .panel.panel-default
      .panel-heading
        .panel-title
          a(data-toggle='collapse', href='#collapse5') Beverages
        hr(width="50%")
      #collapse5.panel-collapse.collapse
