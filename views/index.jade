extends layout

block content
  script(src="/javascripts/index.js")
  nav.navbar.navbar-default.navbar-fixed-top
    .container-fluid
      h1#MealBuddy MealBuddy
      button#mealCart.btn.btn-default
        span.glyphicon.glyphicon-shopping-cart(type='button', style='display:inline-block;vertical-align:middle;')
        p#cartQuantity(style='display:inline-block;') 0  
  br

  .main.container-fluid 
    div(style='text-align:left')
      h2.display-4.m-b-2 Restrictions
    form#criteria-form
      table#criteriaTable.form-group
        tr.table-row
          td 
          td Restriction Name
          td 
          td
          td
          td Priority
        tr.table-row.criteria-row
          td
            span.glyphicon.glyphicon-remove
          td
            select.form-control.selectpicker.criteria-name(type='text', title='fat, sugar, etc...', data-live-search='true', data-width="200px", data-size="10")
          td
            select.form-control.selectpicker.range-type(data-width="130px")
              option(value='lt') Less than
              option(value='between') Between
              option(value='gt') Greater than
          td(nowrap='true')
            input.form-control.range1(type='number', maxlength='5', value=30)
            p.units1 mg
          td(nowrap='true')
            input.form-control.range2(type='number', maxlength='5', value=50, hidden=true)
            p.units2(hidden=true) mg
          td
            select.form-control.selectpicker.priority(data-width="130px")
              option(value='high') High
              option(value='medium', selected='selected') Medium
              option(value='low') Low

        tr.table-row.criteria-row
          td
            span.glyphicon.glyphicon-remove
          td
            select.form-control.selectpicker.criteria-name(type='text', title='fat, sugar, etc...', data-live-search='true', data-width="200px", data-size="10")
          td
            select.form-control.selectpicker.range-type(data-width="130px")
              option(value='lt') Less than
              option(value='between') Between
              option(value='gt') Greater than
          td(nowrap='true')
            input.form-control.range1(type='number', size='5', value=30)
            p.units1 mg
          td(nowrap='true')
            input.form-control.range2(type='number', size='5', value=30, hidden=true) 
            p.units2(hidden=true) mg
          td
            select.form-control.selectpicker.priority(data-width="130px")
              option(value='high', selected='selected') High
              option(value='medium') Medium
              option(value='low') Low
      
      p C u i s i n e   P r e f e r e n c e ? 
      select#cuisine-type.form-control.selectpicker(type='text', data-live-search='true', data-width="200px")
        option(value='0') No Preference
        option(value='1') Thai
        option(value='2') Italian
        option(value='3') Indian
    br
    button#add.btn.btn-success(type="button") Add Restriction
    button#submit.btn.btn-primary(type="button") Get Suggestions
      


  #suggestions.container-fluid(hidden=true)
    h2 Suggestions

    ul.nav.nav-pills
      li.active 
        a(href='#appetizerTab' data-toggle='pill') Appetizers
      li
        a(href='#mealTab' data-toggle='pill') Meals
      li
        a(href='#sideTab' data-toggle='pill') Sides
      li
        a(href='#snackTab' data-toggle='pill') Snacks
      li 
        a(href='#vegatableTab' data-toggle='pill') Vegetables 
      li 
        a(href='#fruitTab' data-toggle='pill') Fruits 
      li 
        a(href='#beverageTab' data-toggle='pill') Beverages
      li 
        a(href='#dessertTab' data-toggle='pill') Desserts  

    .tab-content
      #appetizerTab.tab-pane.fade.in.active
        .container-fluid
          .row
            #appetizerList.card-group
              //- .card
              //-   img(src='images/default_item_image.jpg')
              //-   .card-block
              //-     h4.card-title Chicken From the Sea, (Chobani) Blueberry
              //-     p.card-text.
              //-       Sugar<br>
              //-       Text
              //-   .card-footer
              //-     small Footer
              //- .card
              //-   img.card-img-top(src='images/default_item_image.jpg')
              //-   .card-block
              //-     .card-title Chicken
              //-     .card-text
              //-       p Sugar 
              //-       p Fat
              //-   .card-footer
              //-     small Footer


      #mealTab.tab-pane.fade
        .container-fluid
          .row
            #mealList.card-group
      #sideTab.tab-pane.fade
        .container-fluid
          .row
            #sideList.card-group
      #snackTab.tab-pane.fade
        .container-fluid
          .row
            #snackList.card-group
      #vegatableTab.tab-pane.fade
        .container-fluid
          .row
            #vegetableList.card-group
      #fruitTab.tab-pane.fade
        .container-fluid
          .row
            #fruitList.card-group
      #beverageTab.tab-pane.fade
        .container-fluid
          .row
            #beverageList.card-group
      #dessertTab.tab-pane.fade
        .container-fluid
          .row
            #dessertList.card-group



  //- Item Modal and Cart Modal
  #itemModal.modal.fade(tabindex='-1', role='dialog')
    .modal-dialog(role='document')
      .modal-content
        .modal-header
          h2#item-modal-title.modal-title Food
        .modal-body
          h4 Your Restriction(s)
          #itemInfoCriteriaDesc
          br
          hr
          br
          h4 Nutrition Info
          #itemInfoDesc
            table
              tr(style="font-weight: bold; color: black;")
                td Serving Size:
                td#itemSERVINGSIZE --

              tr
                td(colspan='2') 
                  h4 Proximates
              tr
                td Calories
                td#itemCALORIES --
              tr
